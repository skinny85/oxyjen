# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                              controllers.MainCtrl.index

GET         /ozone                         controllers.MainOzoneCtrl.index
GET         /ozone/register                controllers.RegisterCtrl.register
POST        /ozone/register                controllers.RegisterCtrl.registerPost
GET         /ozone/register/success        controllers.RegisterCtrl.success

POST        /ozone/login                   controllers.MainOzoneCtrl.login

GET         /ozone/api/test                controllers.JsonApiCtrl.testJson

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.at(path="/public", file)
#GET         /favicon                       controllers.Assets.at(path="/public", file="images/favicon.png")
